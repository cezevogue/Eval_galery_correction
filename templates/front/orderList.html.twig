        <thead>
        <tr>
            <th>Nom</th>
            <th>Prix</th>
            <th>Photo</th>
            <th>Date</th>
        </tr>
        </thead>
        <tbody>

        {% for item in commandes %}
            <tr>
                <td >{{ item.product.title }}</td>
                <td>{{ item.product.price }}â‚¬</td>
                <td><img width="100" src="{{ asset('upload/') }}{{ item.product.pictureSrc }} " alt="{{ item.product.pictureName }}"></td>
