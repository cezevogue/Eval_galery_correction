{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}{{ title }}{% endblock %}

{% block h1 %}
    {{ title }}
{% endblock %}

{% block body %}
     {{ form(form) }}


    <table class="table table-dark table-striped w-75 mx-auto">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}

        <tr>
            <td>{{ category.id }}</td>
            <td>{{ category.title }}</td>
            <td>
                <a href="{{ path('updateCategory', { 'id': category.id }) }}" class="btn btn-info">Modifier</a>
                <a href="{{ path('categoryDelete', { 'id': category.id }) }}"  onclick="return confirm('Etes-vous sûr?')" class="btn btn-danger">Supprimer</a>
            </td>
        </tr>

            {% else %}
            <tr>
                <td colspan="3"><h3 class="text-center">Aucune catégorie enregistrée</h3></td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

{% endblock %}
