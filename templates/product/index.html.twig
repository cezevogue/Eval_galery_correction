{% extends 'base.html.twig' %}

{% block body %}
    <table class="table table-dark table-striped w-75 mx-auto">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Photo</th>
            <th>Prix</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}

            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.title }}</td>
                <td><img width="100" src="{{ asset('upload/') }}{{ product.pictureSrc }}" alt="{{ product.pictureName }}" title="{{ product.pictureName }}"></td>
                <td>{{ product.price }}</td>
                <td>
                    <a href="{{ path('update_product', { 'id': product.id }) }}" class="btn btn-info">Modifier</a>
                    <a href="{{ path('delete_product', { 'id': product.id }) }}"  onclick="return confirm('Etes-vous sûr?')" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>

        {% else %}
            <tr>
                <td colspan="5"><h3 class="text-center">Aucune oeuvre enregistrée</h3></td>
            </tr>
        {% endfor %}

        </tbody>
    </table>




{% endblock %}
{% block h1 %}
    {{ title }}
{% endblock %}

{% block title %}
    {{ parent() }}{{ title }}
{% endblock %}

